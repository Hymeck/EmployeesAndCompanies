@model EmployeeViewModel
@{
    ViewBag.Title = ViewData["title"];
}

<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id"/>
            <div>
                <label asp-for="Name1"></label><br/>
                <input asp-for="Name1" class="form-control" autocomplete="off"/>
                <span asp-validation-for="Name1"></span><br/>
            </div>

            <div>
                <label asp-for="Name2"></label><br/>
                <input asp-for="Name2" class="form-control" autocomplete="off"/>
                <span asp-validation-for="Name2"></span><br/>
            </div>

            <div>
                <label asp-for="Name3"></label><br/>
                <input asp-for="Name3" class="form-control" autocomplete="off"/>
            </div>

            <div>
                <label asp-for="EmploymentDate"></label><br/>
                <input asp-for="EmploymentDate" class="form-control"/>
                <span asp-validation-for="EmploymentDate"></span><br/>
            </div>

            <div class="form-group">
                <ul>
                    @for (var i = 0; i < Model.Companies.Count; i++)
                    {
                        <li>
                            <input type="hidden" asp-for="@Model.Companies[i].Value"/>
                            <input type="hidden" asp-for="@Model.Companies[i].Text"/>
                            <input type="hidden" asp-for="@Model.Companies[i].Selected"/>
                            <input asp-for="Companies[i].Selected"/>
                            @Model.Companies[i].Text
                        </li>
                    }
                </ul>
            </div>

            <div>
                <button class="btn btn-primary" type="submit">Применить</button>
            </div>
        </form>
    </div>
</div>
